# ARC環境変数設定ファイル
# 使用前に `.env` にコピーして実際の値を設定してください

# OpenAI API Key（必須）
OPENAI_API_KEY=your_openai_api_key_here

# データベースパス
DATABASE_PATH=./data/arc.db

# ログレベル (debug, info, warn, error)
LOG_LEVEL=info

# スケジューラー設定
MORNING_REMINDER_TIME=9:00
EVENING_CHECK_TIME=22:00

# デフォルト閾値設定
DEFAULT_CRISIS_STRESS_SCORE=8
DEFAULT_CRISIS_MEAL_COUNT=0
DEFAULT_CRISIS_SLEEP_HOURS=3
